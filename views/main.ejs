<div ng-controller='mainCtrl'>
	
	<div class="row">
			<div class="col-xs-3">
				<div class="page-header">
				  <h1><small>参数设置</small></h1>
				</div>
				<form>
				  <div class="form-group">
				    <label for="rnumber">行数</label>
				    <input type="number" class="form-control" id="rnumber" placeholder="行数" min=1 max=100 ng-model="rnumber">
				  </div>
				  <div class="form-group">
				    <label for="cnumber">列数</label>
				    <input type="number" class="form-control" id="cnumber" placeholder="列数" min=1 max=100 ng-model="cnumber">
				  </div>
				  <button type="submit" class="btn btn-default" ng-click="generateTable()">生成</button>
				</form>
			</div>
			<div class="col-xs-9">
				<div class="page-header">
				  <h1><small>实时表格</small></h1>
				</div>
				<div id="tableContainer">
					<generate-table></generate-table>
				</div>
			</div>
		</div>

</div>